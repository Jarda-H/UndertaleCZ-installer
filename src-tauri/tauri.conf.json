{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Undertale CZ installer"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {},
      "fs": {
        "writeFile": true,
        "removeFile": true,
        "readFile": true,
        "scope": ["$TEMP/**"]
      },
      "path": {
        "all": true
      },
      "os": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "dialog": {
        "ask": true,
        "message": true,
        "open": true,
        "confirm": true
      },
      "shell": {
        "all": false,
        "open": "^((mailto:\\w+)|(tel:\\w+)|(https?://\\w+)).+|.*\\\\UNDERTALE\\.exe$"
      }
    },
    "windows": [
      {
        "title": "Undertale instálator češtiny",
        "width": 800,
        "height": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": false,
      "targets": "all",
      "identifier": "cz.undertale.preview",
      "icon": [
        "icons/icon.ico"
      ]
    }
  }
}
