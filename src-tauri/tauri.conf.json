{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "undertaleinstaller",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {},
      "fs": {
        "writeFile": true,
        "removeFile": true,
        "scope": ["$TEMP/**"]
      },
      "os": {
        "all": true
      },
      "process": {
        "exit": true
      },
      "dialog": {
        "ask": true,
        "message": true,
        "open": true,
        "confirm": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "execute": true,
        "scope": [
          {
            "name": "binaries/xdelta3-x86_64-pc-windows-msvc.exe",
            "sidecar": true
          },
          {
            "name": "xdelta3",
            "cmd": "xdelta3.exe",
            "args": [
              "-d",
              "-s",
              { "validator": "\\S+" },
              { "validator": "\\S+" },
              { "validator": "\\S+" }
            ]
          }
        ]
      }
    },
    "windows": [
      {
        "title": "Undertale instálator češtiny",
        "width": 800,
        "height": 600,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cz.undertale.preview",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["binaries/xdelta3"]
    }
  }
}
